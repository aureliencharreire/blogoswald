<header class="intro-header" style="background-image: url(<%= asset_path 'home_background.jpg' %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>User Admin</h1>
                    <hr class="small">
                    <span class="subheading">Tableau de gestion des utilisateurs</span>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="container">
    <h2>Liste des utilisaeurs</h2>
    <br>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <% if current_user.try(:admin?) %>
                    <td><%= link_to 'Modifier le profil utilisateur', edit_user_admin_path(user.id) %></td>
                    <% end %>
                </tr>
                <% end %>
            </div>
        </tbody>
    </table>
</div>
